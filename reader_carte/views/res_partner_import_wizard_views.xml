<record id="view_res_partner_import_wizard_form" model="ir.ui.view">
    <field name="name">res.partner.import.wizard.form</field>
    <field name="model">res.partner.import.wizard</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="file" filename="file_name"/>
            </group>
            <footer>
                <button string="Importer" type="object" name="import_file" class="btn-primary"/>
                <button string="Annuler" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>